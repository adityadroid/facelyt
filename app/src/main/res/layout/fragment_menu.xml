<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:colorpicker="http://schemas.android.com/tools">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.design.widget.NavigationView
            android:id="@+id/vNavigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"

            android:background="@android:color/transparent"
            app:headerLayout="@layout/view_global_menu_header"
            app:itemIconTint="#8b8b8b"
            app:itemTextColor="@android:color/white"
            app:menu="@menu/drawer_menu"/>

                <LinearLayout
                    android:paddingTop="10dp"

                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.SwitchCompat
                        android:text="Light Mode"
                        android:textStyle="bold"
                        android:textSize="15sp"

                        android:textColor="@android:color/white"
                        android:shadowColor="?attr/colorAccent"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/lightModeToggle"
                        />

                    <android.support.v7.widget.SwitchCompat
                        android:text="Block Images"
                        android:textStyle="bold"
                        android:textSize="15sp"

                        android:textColor="@android:color/white"
                        android:shadowColor="?attr/colorAccent"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/loadImagesToggle"

                        />
                </LinearLayout>
                    <LinearLayout
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.SwitchCompat
                            android:text="External Links"
                            android:textStyle="bold"
                            android:textSize="15sp"

                            android:textColor="@android:color/white"
                            android:shadowColor="?attr/colorAccent"
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/externalLinksToggle"

                            />
                        <android.support.v7.widget.SwitchCompat
                            android:text="Clear Hotlinks"
                            android:textStyle="bold"
                            android:textSize="15sp"

                            android:textColor="@android:color/white"
                            android:shadowColor="?attr/colorAccent"
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/clearBookmarksToggle"
                            />
                    </LinearLayout>




                </LinearLayout>
        </LinearLayout></ScrollView>
    </LinearLayout>